{
    "name":           "rdlowrey/nbsock",
    "homepage":       "https://github.com/rdlowrey/nbsock",
    "description":    "Non-blocking socket connection/encryption using the Amp concurrency framework",
    "keywords": [
        "tcp",
        "sockets",
        "tls",
        "encryption",
        "async",
        "non-blocking",
        "amp"
    ],
    "license":        "MIT",
    "authors": [
        {
            "name": "Daniel Lowrey",
            "email": "rdlowrey@gmail.com",
            "role": "Creator / Lead Developer"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "amphp/amp": "~0.11",
        "amphp/dns": "~0.3"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/amphp/amp.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/amphp/dns.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/rdlowrey/nbsock.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "Nbsock\\": "lib/"
        },
        "files": ["lib/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Nbsock\\Test\\": "test/"
        }
    }
}
