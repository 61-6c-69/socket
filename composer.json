{
    "name": "amphp/socket",
    "homepage":  "https://github.com/amphp/socket",
    "description": "Async socket connection tools for the amp concurrency framework",
    "support": {
        "issues": "https://github.com/amphp/socket/issues"
    },
    "keywords": [
        "tcp",
        "sockets",
        "tls",
        "encryption",
        "async",
        "non-blocking",
        "amp"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Lowrey",
            "email": "rdlowrey@gmail.com"
        },
        {
            "name": "Aaron Piotrowski",
            "email": "aaron@trowski.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.0",
        "amphp/amp": "dev-master as 2.0",
        "amphp/dns": "dev-amp_v2 as 0.2",
        "amphp/stream": "dev-master as 0.1"
    },
    "require-dev": {
        "amphp/loop": "dev-master",
        "phpunit/phpunit": "^4|^5",
        "friendsofphp/php-cs-fixer": "~1.9"
    },
    "autoload": {
        "psr-4": {
            "Amp\\Socket\\": "lib/"
        },
        "files": ["lib/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Amp\\Socket\\Test\\": "test/"
        }
    }
}
